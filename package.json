{
  "name": "projet",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npx vite",
    "start:backend": "node backend/server/server.js",
    "electron": "wait-on http://localhost:5173 && electron .",
    "dev": "concurrently \"npm run start:frontend\" \"npm run start:backend\" \"npm run electron\"",
    "build": "cd frontend && npx vite build",
    "package": "electron-packager . BattleRoyaleMemes --platform=win32,darwin,linux --arch=x64 --out=dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.0.1",
    "electron": "^32.1.2",
    "electron-packager": "^17.1.2",
    "wait-on": "^8.0.1"
  }
}
